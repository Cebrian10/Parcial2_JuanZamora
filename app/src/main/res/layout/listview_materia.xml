<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/black">

    <ImageView
        android:id="@+id/imgMateria"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/txtMateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quimica"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/imgMateria"/>

    <TextView
        android:id="@+id/txtSemestre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="II Smestre"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/imgMateria"
        android:layout_below="@+id/txtMateria"/>

    <TextView
        android:id="@+id/txtNota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_toLeftOf="@+id/imgNota"/>

    <ImageView
        android:id="@+id/imgNota"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
